<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE xml>
<module rename-to='invoicebinder'>
  <!-- Inherit the invoicebindercore Web Toolkit stuff.                        -->
  <inherits name='com.google.gwt.user.User' />

  <!-- Inherit the default GWT style sheet.  You can change       -->
  <!-- the theme of your GWT application by uncommenting          -->
  <!-- any one of the following lines.                            -->
  <!-- <inherits name='com.google.gwt.user.theme.standard.Standard' /> -->
  <inherits name='com.google.gwt.user.theme.chrome.Chrome'/>
  <!-- <inherits name='com.google.gwt.user.theme.dark.Dark'/>     -->
  <!-- charts -->
  
  <inherits name='com.google.gwt.visualization.Visualization'/> <!-- Charts -->
  <inherits name="gwtupload.GWTUpload"/> <!-- File Upload -->
  <inherits name="com.google.gwt.logging.Logging"/>  <!-- Client Logging -->    
          
  <!-- Specify the app entry point class.                         -->
  <entry-point class='com.invoicebinder.client.InvoiceBinder' />

  <!-- Specify the paths for translatable code                    -->
  <source path='client' />
  <source path='shared' />
  
  <set-configuration-property name="CssResource.style" value="pretty"/>

  <!--<set-property name="user.agent" value="safari" />-->

</module>
