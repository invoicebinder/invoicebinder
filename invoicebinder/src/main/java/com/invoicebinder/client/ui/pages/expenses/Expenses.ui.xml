<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:c="urn:import:com.google.gwt.user.cellview.client">
    <ui:style>           
        .cellTable {
        border-bottom: 1px solid #ccc;
        text-align: left;
        margin-bottom: 4px;
        }
    </ui:style>
    <g:HTMLPanel>
        <div class="container">
            <table>
                <tr>
                    <td class="buttonscolumn-left">
                        <g:Button ui:field="newExpense">New</g:Button>
                        <g:Button ui:field="editExpense">Edit</g:Button>
                        <g:Button ui:field="deleteExpense">Delete</g:Button>

                    </td>
                </tr>
                <tr>
                    <td class="gridcolumn">
                        <table>
                            <tr>
                                <td>
                                    <g:TextBox ui:field="txtSearch"></g:TextBox>
                                </td>
                            </tr>                            
                            <tr>
                                <td>
                                    <article class="grid-header">
                                        <header>
                                            <span class="panel-header-text">Expenses</span>
                                        </header>                             
                                        <div class="module_content">
                                            <g:HTMLPanel ui:field="receiptsContainer">
                                            </g:HTMLPanel>
                                        </div>
                                    </article>                                    
                                </td>
                            </tr>
                        </table>   
                    </td>
                </tr>
            </table>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>