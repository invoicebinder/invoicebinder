<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:style>

    </ui:style>
    <g:HTMLPanel>
        <div id="installheader-wrapper">
            <div id="installheader" class="installheader-container">
                <div id="logo">
                    <div class="installheader-logo headers-all">
                        <div style="float:left;">
                            <g:Image ui:field="logoImage"></g:Image>
                        </div>
                        <g:Label ui:field="title"></g:Label>
                    </div>
                </div>
            </div>
        </div>         
        <div class="container">            
            <div class="wrapped-box">
                <div class="install-messages">
                    <br/>
                    <g:Label ui:field="lblInstallMessages"></g:Label>                    
                </div>                
                <div class="introduction">
                    <br/>
                    <br/>
                    <p class="installpage-headertext">Setup Database</p>
                </div>
                <table class="centered" cellpadding="10">
                    <tr>
                        <td>MySQL Server Hostname *</td>
                        <td>
                            <g:TextBox ui:field="mysqlHost" />
                        </td>
                    </tr>
                    <tr>
                        <td>MySQL Server Username *</td>
                        <td>
                            <g:TextBox ui:field="mysqlUser" />
                        </td>
                    </tr>
                    <tr>
                        <td>MySQL Server Password *</td>
                        <td>
                            <g:PasswordTextBox ui:field="mysqlPassword" />
                        </td>
                    </tr>
                    <tr>
                        <td>MySQL Server Port *</td>
                        <td>
                            <g:IntegerBox ui:field="mysqlPort" />
                        </td>
                    </tr>
                </table>
                <g:Button text="Test Connection" ui:field="nextBtn" styleName="appbutton-default"></g:Button>
            </div>
        </div>        
    </g:HTMLPanel>
</ui:UiBinder>