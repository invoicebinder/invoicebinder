<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:style>
        #send p { 
        margin-bottom: 20px 
        }
        textarea { 
        width: 95%; 
        margin: 0 0 0 2px; 
        }
        #apply { 
        border-top: 1px solid #efefef; 
        margin-top: 30px; 
        padding: 20px 0 0 0; 
        }
        #apply ul { 
        margin-bottom: 50px 
        }      
    </ui:style>
    <g:HTMLPanel ui:field="contactUsPanel">
        <div id="main" class="maincontainer">
            <br/>
            <g:Label ui:field="messageLabel"></g:Label>
            <div id="contactus-form" class="form defaultformwidth">
                <div id="contactus-inner">
                    <div class="clearfix subheader" id="contactusheader">
                        <table cellpadding="0" cellspacing="0" border="0">
                            <tr>
                                <td>
                                    <h1>Contact Us</h1>                                    
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    Please complete the fields below to contact us.                                    
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>
                <form class="signup-form" id="send" action="">
                    <p>
                        <label for="name">First Name *</label>
                        <g:TextBox ui:field="firstName"></g:TextBox>
                    </p>
                    <p>
                        <label for="name">Last Name *</label>
                        <g:TextBox ui:field="lastName"></g:TextBox>                        
                    </p>
                    <p>
                        <label for="email">Email *</label>
                        <g:TextBox ui:field="emailAddress"></g:TextBox>                        
                    </p>
                    <p>
                        <label for="email">Message *</label>
                        <g:TextArea ui:field="contactMessage"></g:TextArea>                        
                    </p>
                    <p>
                        <g:Button ui:field="btnSubmit"></g:Button>
                    </p>
                </form>
                <div id="required" class="required">
                    <p>* Required Fields</p>
                </div>
            </div>
        </div>                
    </g:HTMLPanel>
</ui:UiBinder>