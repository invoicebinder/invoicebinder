<!--
Uncomment this for XHTML entities
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
-->
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:style>

    </ui:style>
    <g:HTMLPanel>
        <g:VerticalPanel ui:field="invoicePanel">
            <g:HTMLPanel>
                <table border="0" width="100%" height="100%" cellpadding="2" cellspacing="2" ui:field="tblMain">
                    <!-- tax invoice label -->
                    <tr>
                        <td  colspan="100%">
                            <div width="100%">
                                <g:Label ui:field="lblTaxInvoice"></g:Label>
                            </div>
                        </td>
                    </tr>
                    <!-- company logo and company information -->
                    <tr>
                        <td>
                            <div style="float:left; padding:10px;" class="professionalinvoice-logo">
                                <g:Image ui:field="imgLogo"></g:Image>
                            </div>
                            <div style="float:left; padding-left:30px; padding-right:30px; height:80px; margin-top: 20px;">
                                <table border="0" cellpadding="0" cellspacing="0" width="100%">
                                    <tr>
                                        <td>
                                            <g:Label ui:field="lblCompanyName"></g:Label>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <g:Label ui:field="lblCompanyABN"></g:Label>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <g:Label ui:field="lblCompanyAddress"></g:Label>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <g:InlineLabel ui:field="lblCompanySuburb"></g:InlineLabel>
                                            <g:InlineLabel ui:field="lblCompanyStateAndPostCode"></g:InlineLabel>                                
                                        </td>
                                    </tr>                                           
                                </table>                                   
                            </div>
                            <div style="float:left; padding-left:30px; padding-right:30px; height:80px; margin-top: 20px;">
                                <table border="0" cellpadding="0" cellspacing="0" width="100%">
                                    <tr>
                                        <td>
                                            <g:Label ui:field="lblCompanyPhone"></g:Label>
                                        </td>
                                    </tr>                                                                                                                                                
                                    <tr>
                                        <td>
                                            <g:Label ui:field="lblCompanyEmail"></g:Label>
                                        </td>
                                    </tr>                             
                                </table>                                
                            </div>
                        </td>
                    </tr>
                    <!-- client information -->
                    <tr>
                        <td>
                            <div class="professionalinvoice-section-top">
                                <div style="float:left; width:49%;" class="professionalinvoice-billtotext">
                                    <table cellpadding="0" cellspacing="0" border="0" width="100%">
                                        <tr>
                                            <td>
                                                <g:Label ui:field="lblClientName"></g:Label>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>
                                                <g:Label ui:field="lblClientAddress"></g:Label>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>
                                                <g:Label ui:field="lblClientSuburb"></g:Label>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>
                                                <g:Label ui:field="lblClientPhone"></g:Label>
                                            </td>
                                        </tr>                                                                                                                                                
                                        <tr>
                                            <td>
                                                <g:Label ui:field="lblClientEmail"></g:Label>
                                            </td>
                                        </tr>  
                                    </table>                                         
                                </div>
                                <div style="float:left; width:15%;" class="professionalinvoice-box professionalinvoice-standard-box">
                                    <div class="professionalinvoice-box-header">Invoice Date</div>
                                    <div style="margin: 0 auto;"><g:InlineLabel ui:field="lblInvoiceDate"></g:InlineLabel></div>                                                                                      
                                </div>
                                <div style="float:left; width:20%;" class="professionalinvoice-box professionalinvoice-red-box">    
                                    <div class="professionalinvoice-box-header">Amount Due</div>
                                    <div style="margin: 0 auto;"><g:InlineLabel ui:field="lblAmount"></g:InlineLabel></div>                                        
                                </div>
                                <div style="float:left; width:15%;" class="professionalinvoice-box professionalinvoice-standard-box">
                                    <div class="professionalinvoice-box-header">Due Date</div>   
                                    <div style="margin: 0 auto;"><g:InlineLabel ui:field="lblDueDate"></g:InlineLabel></div>                                                                
                                </div>     
                            </div>                                
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <br/>                           
                            <br/>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <table width="100%">
                                <tr>
                                    <td class="professionalinvoice-content-column">
                                        <!-- Invoice Details Table -->
                                        <table cellpadding="0" cellspacing="0" border="0" width="100%">
                                            <tr>
                                                <td>
                                                    <g:InlineLabel>Invoice No:</g:InlineLabel> 
                                                    <g:InlineLabel ui:field="lblInvoiceNumber"></g:InlineLabel>
                                                </td>
                                            </tr>
                                            <tr>
                                            </tr>
                                            <tr>
                                                <td>
                                                    <g:InlineLabel>Purchase Order No:</g:InlineLabel> 
                                                    <g:InlineLabel ui:field="lblPurchaseOrderNo"></g:InlineLabel>
                                                </td>
                                            </tr>
                                        </table> 
                                    </td>                                    
                                    <td class="professionalinvoice-content-column">
                                        <!-- Custom Attributes Table -->
                                        <g:HTMLPanel ui:field="customAttribPanel"></g:HTMLPanel>
                                    </td>
                                </tr>
                            </table>                                     
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <br/>
                        </td>
                    </tr>                        
                    <tr>
                        <td>
                            <!-- Invoice Items Table -->
                            <g:HTMLPanel ui:field="itemsPanel"></g:HTMLPanel>                                
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <br/>
                            <br/>
                        </td>
                    </tr>
                    <tr>
                        <td class="professionalinvoice-component-header">
                            <span>Comments</span>    
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <!-- Description Panel -->
                            <g:HTMLPanel ui:field="descPanel"></g:HTMLPanel>                                  
                        </td>
                    </tr>
                    <tr>
                        <td></td>
                    </tr>                    
                </table>
            </g:HTMLPanel>
        </g:VerticalPanel>             
    </g:HTMLPanel>
</ui:UiBinder>